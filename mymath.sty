}


\newcommand{\DefineDelimiters}[3]{%
\expandafter\newcommand\csname#1\endcsname[2][]{%
\ifx$##1$% ##1 is empty
\ensuremath{\left#2 ##2 \right#3}%
\else% ##1 is non-empty
\ensuremath{##1#2 ##2 ##1#3}%
\fi%
}%
}

